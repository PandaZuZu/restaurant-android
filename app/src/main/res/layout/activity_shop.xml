<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/shopView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cpl.restaurantrezervation.activity.ShopActivity">



    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/application_gradient_background"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/compass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/input_padding"
            android:src="@drawable/compass"
            android:background="@drawable/menu_border"
            android:contentDescription="@string/app_name"/>
        <ImageButton
            android:id="@+id/achievement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/input_padding"
            android:src="@drawable/medal"
            android:background="@drawable/menu_border"
            android:contentDescription="@string/app_name"/>
        <ImageButton
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/input_padding"
            android:src="@drawable/shopping_basket"
            android:background="@drawable/menu_border"
            android:contentDescription="@string/app_name"/>
        <ImageButton
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/input_padding"
            android:src="@drawable/lifebuoy"
            android:background="@drawable/menu_border"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>


    <TextView
        android:id="@+id/shopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_margin"
        android:textSize="@dimen/coins_text_size"
        android:layout_centerHorizontal="true"
        android:text="Shop" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/shopText"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/shopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
